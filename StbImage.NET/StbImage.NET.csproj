<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Description>C# wrapper of the famous stb_image library</Description>
		<PackageProjectUrl>https://github.com/Cyphall/StbImage.NET</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Cyphall/StbImage.NET</RepositoryUrl>
	</PropertyGroup>
	
	<ItemGroup>
		<None Include="lib/stb_image_x64.dll" Pack="true" PackagePath="runtimes\win-x64\native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Include="lib/stb_image_x86.dll" Pack="true" PackagePath="runtimes\win-x86\native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Include="StbImage.NET.targets" Pack="true" PackagePath="build">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
